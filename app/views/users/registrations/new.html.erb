<div class="container">
  <h1 class="title-header">Sign Up</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, require: true, autofocus: true, label: "First Name" %>
      <%= f.input :last_name, require: true, autofocus: true, label: "Last Name" %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :student, autofocus: true, label: "Are you a Student?", as: :boolean %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, label: "Password Confirmation" %>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
