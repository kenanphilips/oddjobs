<%= simple_form_for @profile do |f| %>
  <%= f.input :description, as: :text %>
  <%= f.input :age, as: :integer %>
  <%= f.input :city, label: "Location", hint: ("Please put 'City' and 'Province'.") %>
  <%= f.input :school, hint: ("If attending.") %>
  <%= f.input :experience, as: :text %>
  <%= f.input :phone_number, label: "Phone Number" %>
  <%= f.input :image, label: "Upload a Profile Image" %>
  <%= f.input :remove_image, as: :boolean, label: "Remove Image" %>
  <p><strong>OR</strong></p>
  <%= f.input :remote_image_url, label: "Profile Image URL" %>
  <%= f.button :submit %>
<% end %>
